<% layout('layouts/boilerplate') %>
<h1>All Burger Places</h1>
<div>
  <a href="/burgers/new">Add Burger Place</a>
</div>

<%for (let burger of burgers) {%>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" alt="" src="<%=burger.image %>">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%=burger.title %></h5>
        <p class="card-text"><%=burger.description %></p>
        <p class="card-text">
          <small class="text-muted"><%=burger.location %></small>
        </p>
        <a class="btn btn-primary" href="/burgers/<%= burger._id %>">View</a>
      </div>
    </div>
  </div>

</div>
<% }%>